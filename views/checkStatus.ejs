<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Check Enrollment Status</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/style.css">
  <style>
    body { font-family: 'Inter', sans-serif; background: #f8f9fa; }
    .status-card { background: white; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); padding: 2rem; max-width: 720px; margin: 5vh auto; }
    .status-badge { font-size: 1rem; padding: 0.35rem 1rem; border-radius: 50rem; }
    .pending { background-color: #ffc107; color: #000; }
    .approved { background-color: #28a745; color: #fff; }
    .rejected { background-color: #dc3545; color: #fff; }
    .token-row { display:flex; align-items:center; gap:.5rem; }
    .token-box { font-weight:700; font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace; background:#f8f9fa; border:1px solid #e9ecef; border-radius:.5rem; padding:.3rem .5rem; }
    .copy-btn { --bs-btn-padding-y: .25rem; --bs-btn-padding-x: .6rem; --bs-btn-font-size: .875rem; }
    
    /* Dropdown menu styles */
    .dropdown {
        position: relative;
        display: inline-block;
        z-index: 999;
    }
    
    .dropdown-content {
        display: none !important;
        position: absolute;
        background-color: white;
        min-width: 200px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 10000;
        top: calc(100% + 5px);
        left: 0;
        border-radius: 4px;
        pointer-events: auto;
    }
    
    .dropdown-content a {
        color: #333;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        font-size: 14px;
        transition: all 0.3s ease;
    }
    
    .dropdown-content a:hover,
    .dropdown-content a:active {
        background-color: #007bff;
        color: white;
    }
    
    .dropdown.active .dropdown-content {
        display: block !important;
        animation: slideDown 0.3s ease-out;
    }
    
    .dropdown > a {
        cursor: pointer;
        text-decoration: none;
        color: #555;
        font-weight: 600;
    }
    
    .dropdown > a::after {
        content: ' â–¼';
        font-size: 10px;
        margin-left: 5px;
        transition: transform 0.3s;
    }
    
    .dropdown.active > a::after {
        transform: rotate(180deg);
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
  </style>
  <!-- http://localhost:3000/check-status/:token -->
  <!-- http://localhost:3000/check-status -->
</head>
<body>
  <!-- Navigation Header -->
  <header class="navbar">
    <div class="navbar-container">
      <div class="school-logo">
        <img src="/pictures/SchoolLogo-removebg-preview.png" alt="Mainaga San Francisco Integrated School Logo">
        <span class="school-name-text">Mainaga San Francisco Integrated School</span>
      </div>
      <nav class="nav-links">
        <ul>
          <li><a href="/index.html" class="active">HOME</a></li>
          <li><a href="/index.html#about">ABOUT US</a></li>
          <li class="dropdown">
            <a href="#">DOCUMENT REQUEST</a>
            <div class="dropdown-content">
              <a href="/document-request.html">Request Document</a>
              <a href="/check-document-status.html">Check Status</a>
            </div>
          </li>
          <li class="dropdown">
            <a href="#">ENROLLMENT</a>
            <div class="dropdown-content">
              <a href="/enrollment.html">Enroll Now</a>
              <a href="/check-status.html">Check Enrollment Status</a>
            </div>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <div class="container">
    <div class="status-card">
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
        <div class="text-center mt-3">
          <a href="/check-status" class="btn btn-primary">Back to Status Lookup</a>
          <a href="/enrollment.html" class="btn btn-link">Go to Enrollment</a>
        </div>
      <% } else { %>
        <h2 class="mb-3">Enrollment Status</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <div class="text-muted small">Token</div>
            <div class="token-row">
              <code id="statusToken" class="token-box"><%= request.request_token %></code>
              <button id="copyTokenBtn" class="btn btn-outline-secondary btn-sm copy-btn" type="button" title="Copy token">Copy</button>
            </div>
          </div>
          <div>
            <span class="status-badge <%= (request.status || 'pending').toLowerCase() %>"><%= (request.status || 'pending').toUpperCase() %></span>
          </div>
        </div>

        <div class="alert alert-info" role="alert">
          <strong>Reminder:</strong> Save your token. You'll need it to check your enrollment status later. You can also download your request information as a PDF for backup.
        </div>

        <div class="row g-3 mb-3">
          <div class="col-md-6">
            <div class="text-muted small">Learner Name</div>
            <div class="fw-semibold"><%= request.learner_name %></div>
          </div>
          <div class="col-md-3">
            <div class="text-muted small">Grade Level</div>
            <div class="fw-semibold"><%= request.grade_level %></div>
          </div>
          <div class="col-md-3">
            <div class="text-muted small">Email</div>
            <div class="fw-semibold text-break" style="word-wrap: break-word; overflow-wrap: break-word;"><%= request.gmail_address %></div>
          </div>
        </div>

        <div class="row g-3 mb-3">
          <div class="col-md-8">
            <div class="text-muted small">Submitted On</div>
            <% 
              const dateValue = request.registration_date || request.created_at;
              const submittedDate = new Date(dateValue);
              const dateString = (dateValue && submittedDate.getFullYear() > 1970) 
                ? submittedDate.toLocaleString('en-PH', { year: 'numeric', month: 'long', day: 'numeric', timeZone: 'Asia/Manila' })
                : 'Not yet submitted';
            %>
            <div class="fw-semibold"><%= dateString %></div>
          </div>
          <div class="col-md-4">
            <button id="downloadPdfBtn" class="btn btn-outline-primary btn-sm" type="button" title="Download PDF receipt">ðŸ“¥ Download PDF</button>
          </div>
        </div>

        <!-- Store dateString for JavaScript access -->
        <input type="hidden" id="submittedDateInput" value="<%= dateString %>" />

        <% if (request.status === 'approved') { %>
          <div class="alert alert-success">
            <strong>Approved!</strong> Your enrollment has been approved.
            <% if (request.reviewed_at) { %>
              <br><small>Approved on: <%= new Date(request.reviewed_at).toLocaleString('en-PH', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', timeZone: 'Asia/Manila' }) %></small>
            <% } %>
          </div>
        <% } else if (request.status === 'rejected') { %>
          <div class="alert alert-danger">
            <strong>Rejected.</strong>
            <% if (request.rejection_reason) { %>
              <br>Reason: <%= request.rejection_reason %>
            <% } %>
            <% if (request.reviewed_at) { %>
              <br><small>Reviewed on: <%= new Date(request.reviewed_at).toLocaleString('en-PH', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', timeZone: 'Asia/Manila' }) %></small>
            <% } %>
          </div>
        <% } else { %>
          <div class="alert alert-warning">
            <strong>Pending.</strong> Your request is still under review.
          </div>
        <% } %>

        <div class="text-center mt-4">
          <a href="/check-status" class="btn btn-outline-primary">Check another token</a>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const btn = document.getElementById('copyTokenBtn');
      const el = document.getElementById('statusToken');
      if (btn && el) {
        btn.addEventListener('click', async () => {
          try {
            await navigator.clipboard.writeText(el.textContent.trim());
            const old = btn.textContent; btn.textContent = 'Copied!';
            btn.classList.remove('btn-outline-secondary');
            btn.classList.add('btn-success');
            setTimeout(() => { btn.textContent = old; btn.classList.add('btn-outline-secondary'); btn.classList.remove('btn-success'); }, 1200);
          } catch (e) {
            const range = document.createRange();
            range.selectNode(el);
            const sel = window.getSelection();
            sel.removeAllRanges(); sel.addRange(range);
            document.execCommand('copy');
            sel.removeAllRanges();
          }
        });
      }

      const pdfBtn = document.getElementById('downloadPdfBtn');
      if (pdfBtn) {
        pdfBtn.addEventListener('click', function() {
          const token = document.getElementById('statusToken').textContent.trim();
          const learnerName = '<%= request.learner_name %>';
          const gradeLevel = '<%= request.grade_level %>';
          const email = '<%= request.gmail_address %>';
          const status = '<%= (request.status || "pending").toUpperCase() %>';
          const submittedOn = document.getElementById('submittedDateInput').value;

          const htmlContent = `
            <!DOCTYPE html>
            <html>
            <head>
              <meta charset="UTF-8">
              <style>
                body { font-family: Arial, sans-serif; margin: 0; padding: 20px; background: #f8f9fa; }
                .receipt { max-width: 600px; margin: 0 auto; background: white; padding: 30px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); }
                .header { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; border-radius: 5px; text-align: center; margin-bottom: 30px; }
                .header h1 { margin: 0; font-size: 24px; }
                .header p { margin: 5px 0 0 0; font-size: 12px; opacity: 0.9; }
                .section { margin-bottom: 20px; }
                .section-title { font-weight: bold; color: #333; margin-bottom: 10px; border-bottom: 2px solid #667eea; padding-bottom: 5px; }
                .info-row { display: flex; justify-content: space-between; margin-bottom: 8px; padding: 5px 0; }
                .info-label { color: #666; font-size: 13px; }
                .info-value { font-weight: 600; color: #333; }
                .token-box { background: #f0f4ff; border-left: 4px solid #667eea; padding: 15px; border-radius: 4px; margin: 15px 0; }
                .token-box .label { font-size: 12px; color: #666; margin-bottom: 8px; }
                .token-box .value { font-family: 'Courier New', monospace; font-size: 18px; font-weight: bold; color: #667eea; word-break: break-all; letter-spacing: 2px; }
                .status-badge { display: inline-block; padding: 6px 12px; border-radius: 20px; font-weight: bold; font-size: 12px; }
                .status-pending { background: #fff3cd; color: #856404; }
                .status-approved { background: #d4edda; color: #155724; }
                .status-rejected { background: #f8d7da; color: #721c24; }
                .footer { text-align: center; margin-top: 30px; padding-top: 20px; border-top: 1px solid #ddd; font-size: 11px; color: #666; }
              </style>
            </head>
            <body>
              <div class="receipt">
                <div class="header">
                  <h1>Enrollment Request Receipt</h1>
                  <p>ICT Coordinator - Student Enrollment System</p>
                </div>

                <div class="section">
                  <div class="section-title">Student Information</div>
                  <div class="info-row">
                    <span class="info-label">Name:</span>
                    <span class="info-value">${learnerName}</span>
                  </div>
                  <div class="info-row">
                    <span class="info-label">Grade Level:</span>
                    <span class="info-value">${gradeLevel}</span>
                  </div>
                  <div class="info-row">
                    <span class="info-label">Email:</span>
                    <span class="info-value">${email}</span>
                  </div>
                </div>

                <div class="section">
                  <div class="section-title">Request Token (Important - Keep Safe)</div>
                  <div class="token-box" style="margin: 15px 0; padding: 20px; background: #f0f4ff; border-left: 5px solid #667eea; border-radius: 4px;">
                    <div class="label" style="font-size: 13px; color: #666; margin-bottom: 10px; font-weight: 600;">Your Enrollment Request Token</div>
                    <div class="value" style="font-family: 'Courier New', monospace; font-size: 20px; font-weight: bold; color: #667eea; word-break: break-all; letter-spacing: 3px; text-align: center; padding: 15px; background: white; border-radius: 4px; border: 1px solid #e0e7ff;">${token}</div>
                  </div>
                </div>

                <div class="section">
                  <div class="section-title">Enrollment Details</div>
                  <div class="info-row">
                    <span class="info-label">Submitted Date:</span>
                    <span class="info-value">${submittedOn}</span>
                  </div>
                  <div class="info-row">
                    <span class="info-label">Status:</span>
                    <span class="status-badge status-${status.toLowerCase()}">${status}</span>
                  </div>
                </div>

                <div class="section" style="background: #fff3cd; padding: 15px; border-radius: 4px; border-left: 4px solid #ffc107;">
                  <strong>Important:</strong> Keep this token safe. You will need it to check your enrollment status at any time. Save this PDF for your records.
                </div>

                <div class="footer">
                  <p>Generated on ${new Date().toLocaleString('en-PH', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit', timeZone: 'Asia/Manila' })}</p>
                </div>
              </div>
            </body>
            </html>
          `;

          const element = document.createElement('div');
          element.innerHTML = htmlContent;
          
          const opt = {
            margin: 10,
            filename: `enrollment-token-${token.substring(0, 8)}.pdf`,
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2 },
            jsPDF: { orientation: 'portrait', unit: 'mm', format: 'a4' }
          };

          html2pdf().set(opt).from(element).save();
        });
      }

      // Dropdown menu functionality
      const dropdowns = document.querySelectorAll('.dropdown');
      console.log('Setting up dropdowns:', dropdowns.length);
      
      dropdowns.forEach((dropdown, index) => {
        const dropdownToggle = dropdown.querySelector('a');
        console.log('Dropdown', index, ':', dropdownToggle?.textContent);
        
        if (dropdownToggle) {
          // Toggle dropdown on click
          dropdownToggle.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            console.log('Clicked dropdown', index);
            dropdown.classList.toggle('active');
            
            // Close other dropdowns
            dropdowns.forEach(other => {
              if (other !== dropdown) {
                other.classList.remove('active');
              }
            });
          });
        }
      });
      
      // Close dropdowns when clicking outside
      document.addEventListener('click', function(e) {
        if (!e.target.closest('.dropdown')) {
          dropdowns.forEach(dropdown => {
            dropdown.classList.remove('active');
          });
        }
      });
    });
  </script>
  <script>
    // Additional dropdown handler to ensure it works
    document.addEventListener('click', function(e) {
      const dropdownLink = e.target.closest('.dropdown > a');
      if (dropdownLink) {
        e.preventDefault();
        const dropdown = dropdownLink.closest('.dropdown');
        if (dropdown) {
          dropdown.classList.toggle('active');
          // Close other dropdowns
          document.querySelectorAll('.dropdown.active').forEach(other => {
            if (other !== dropdown) {
              other.classList.remove('active');
            }
          });
        }
      }
    });
    
    // Close dropdowns when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.dropdown')) {
        document.querySelectorAll('.dropdown.active').forEach(dropdown => {
          dropdown.classList.remove('active');
        });
      }
    });
  </script>
</body>
</html>
